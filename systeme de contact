    void SupprimContact(){
        char nomsearch[20];
        int trouv=0;
         printf("entrer la valeur de recherche");
            scanf("%s",nomsearch);
     for(int i=0;i<2;i++){
         if (strcmp(nomsearch, tab[i].nom) == 0) {
                 trouv=1;
                 printf("oui trouve\n");
                 strcpy( tab[i].nom,tab[i+1].nom);
                strcpy( tab[i].AdressMail,tab[i+1].AdressMail);
                strcpy( tab[i].nmrTel,tab[i+1].nmrTel);

                 break;
            }
             
