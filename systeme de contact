};
struct Contacts  tab[2];
void AjouterContact(){
    for(int i=0;i<2;i++){
        printf("entrer le nom de contact %d\n",i+1);
            scanf("%s",tab[i].nom);
         printf("entrer le nmro telephone de contact %d\n",i+1);
            scanf("%s",tab[i].nmrTel);
         printf("entrer adresse mail de contact %d\n",i+1);
            scanf("%s",tab[i].AdressMail);
    }
}
