        printf("Choisir le nombre que vous voulez:\n 1 pour ajouter\n 2 pour afficher\n 3 pour modifier\n 4 pour supprimer\n 5 pour rechercher\n");
        scanf("%d", &nmb);

        switch (nmb) {
            case 1:
                Ajouterjoueur();
                break;
            case 2:
                AfficherJoueur();
                
                break;
            case 3:
                // Affichepost();
               
                
                break;
            case 4:
                
                
                break;
            case 5:
                
               
                break;
            default:
               
        }

        printf("Choisir 1 pour afficher le menu, 0 pour sortir : ");
        scanf("%d", &choixMenu);

    } while (choixMenu == 1);

    return 0;
}
